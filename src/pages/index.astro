---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogCard from '../components/BlogCard.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<BaseLayout title="Bobby Galli | Software Developer & AI Enthusiast">
  <!-- Hero Section -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-timber/5 via-transparent to-sage/10"></div>
    <div class="max-w-6xl mx-auto px-4 py-20 md:py-32">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div class="animate-fade-in">
          <p class="text-barn-red font-semibold mb-4 tracking-wide uppercase text-sm">
            Software Developer & AI Enthusiast
          </p>
          <h1 class="text-5xl md:text-6xl font-display font-bold text-timber mb-6 leading-tight">
            Hey, I'm <span class="text-gradient">Bobby Galli</span>
          </h1>
          <p class="text-xl text-stone mb-4">
            A friendly, hard-working, curious, and entrepreneurial minded individual trying to leave the world a little better than I found it.
          </p>
          <p class="text-lg text-stone-light mb-8 italic">
            "Saving the world a pull request at a time"
          </p>
          <div class="flex flex-wrap gap-4">
            <a
              href="/blog"
              class="px-6 py-3 bg-barn-red text-cream rounded-lg font-semibold hover:bg-barn-red-light transition-colors"
            >
              Read the Blog
            </a>
            <a
              href="/about"
              class="px-6 py-3 border-2 border-timber text-timber rounded-lg font-semibold hover:bg-timber hover:text-cream transition-colors"
            >
              About Me
            </a>
          </div>
        </div>
        <div class="relative">
          <div class="absolute -inset-4 bg-gradient-to-br from-sage/30 to-barn-red/20 rounded-2xl blur-2xl"></div>
          <img
            src="/pictures/bobby-barn.jpeg"
            alt="Bobby at the barn"
            class="relative rounded-2xl shadow-2xl w-full object-cover aspect-square"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- What I Do Section -->
  <section class="bg-white py-20">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-display font-bold text-timber text-center mb-4">
        What I Do
      </h2>
      <p class="text-stone text-center max-w-2xl mx-auto mb-12">
        By day I'm building tools that help developers ship better software. By night, I'm exploring the latest in AI and tinkering with side projects.
      </p>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- BugSplat -->
        <div class="card p-8">
          <div class="w-12 h-12 bg-barn-red/10 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-barn-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
            </svg>
          </div>
          <h3 class="font-display text-xl font-bold text-timber mb-2">BugSplat</h3>
          <p class="text-stone text-sm mb-4">
            Principal Software Engineer building crash and error reporting tools that help development teams ship better software.
          </p>
          <a href="https://bugsplat.com" target="_blank" rel="noopener" class="text-barn-red hover:text-barn-red-light text-sm font-medium">
            Visit BugSplat &rarr;
          </a>
        </div>

        <!-- Working Dev's Hero -->
        <div class="card p-8">
          <div class="w-12 h-12 bg-sage/20 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-sage" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="font-display text-xl font-bold text-timber mb-2">Working Dev's Hero</h3>
          <p class="text-stone text-sm mb-4">
            My consulting company where I help businesses build great software and solve tough technical challenges.
          </p>
          <a href="https://workingdevshero.com" target="_blank" rel="noopener" class="text-barn-red hover:text-barn-red-light text-sm font-medium">
            Learn More &rarr;
          </a>
        </div>

        <!-- AI & Open Source -->
        <div class="card p-8">
          <div class="w-12 h-12 bg-gold/20 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="font-display text-xl font-bold text-timber mb-2">AI & Open Source</h3>
          <p class="text-stone text-sm mb-4">
            AI enthusiast who loves testing the latest tools. 15+ published articles and open-source libraries on GitHub.
          </p>
          <a href="https://github.com/bobbyg603" target="_blank" rel="noopener" class="text-barn-red hover:text-barn-red-light text-sm font-medium">
            View GitHub &rarr;
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Experience Section -->
  <section class="py-20">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-display font-bold text-timber text-center mb-4">
        Experience
      </h2>
      <p class="text-stone text-center max-w-2xl mx-auto mb-12">
        A diverse background spanning development, product, and operations. Click a card to learn more.
      </p>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        <!-- DEVELOPMENT -->
        <!-- App Development -->
        <button class="exp-card group" data-color="barn-red">
          <div class="exp-card-icon bg-barn-red/10 text-barn-red group-[.active]:bg-barn-red group-[.active]:text-cream">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="exp-card-title">App Development</h3>
          <div class="exp-card-desc"><span>Building native and cross-platform applications for mobile and desktop.</span></div>
        </button>

        <!-- Agentic Development -->
        <button class="exp-card group" data-color="sage">
          <div class="exp-card-icon bg-sage/10 text-sage group-[.active]:bg-sage group-[.active]:text-cream">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="exp-card-title">Agentic Development</h3>
          <div class="exp-card-desc"><span>Orchestrating AI agents to supercharge software development workflows and productivity.</span></div>
        </button>

        <!-- MCP -->
        <button class="exp-card group" data-color="gold">
          <div class="exp-card-icon bg-gold/10 text-gold group-[.active]:bg-gold group-[.active]:text-timber">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="exp-card-title">MCP</h3>
          <div class="exp-card-desc"><span>Model Context Protocol - Building bridges between AI models and external tools, data sources, and services.</span></div>
        </button>

        <!-- INFRASTRUCTURE -->
        <!-- Cloud Services -->
        <button class="exp-card group" data-color="timber">
          <div class="exp-card-icon bg-timber/10 text-timber group-[.active]:bg-timber group-[.active]:text-cream">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"/>
            </svg>
          </div>
          <h3 class="exp-card-title">Cloud Services</h3>
          <div class="exp-card-desc"><span>Designing and deploying scalable infrastructure on AWS, Azure, and Google Cloud.</span></div>
        </button>

        <!-- DevOps -->
        <button class="exp-card group" data-color="barn-red">
          <div class="exp-card-icon bg-barn-red/10 text-barn-red group-[.active]:bg-barn-red group-[.active]:text-cream">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
          </div>
          <h3 class="exp-card-title">DevOps</h3>
          <div class="exp-card-desc"><span>Automating CI/CD pipelines, infrastructure as code, and deployment workflows.</span></div>
        </button>

        <!-- System Administration -->
        <button class="exp-card group" data-color="sage">
          <div class="exp-card-icon bg-sage/10 text-sage group-[.active]:bg-sage group-[.active]:text-cream">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"/>
            </svg>
          </div>
          <h3 class="exp-card-title">System Administration</h3>
          <div class="exp-card-desc"><span>Managing servers, networks, and infrastructure to keep systems running smoothly.</span></div>
        </button>

        <!-- PRODUCT -->
        <!-- Product Design -->
        <button class="exp-card group" data-color="gold">
          <div class="exp-card-icon bg-gold/10 text-gold group-[.active]:bg-gold group-[.active]:text-timber">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
            </svg>
          </div>
          <h3 class="exp-card-title">Product Design</h3>
          <div class="exp-card-desc"><span>Creating user-centered designs from wireframes to polished interfaces.</span></div>
        </button>

        <!-- Product Management -->
        <button class="exp-card group" data-color="timber">
          <div class="exp-card-icon bg-timber/10 text-timber group-[.active]:bg-timber group-[.active]:text-cream">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
            </svg>
          </div>
          <h3 class="exp-card-title">Product Management</h3>
          <div class="exp-card-desc"><span>Driving product strategy, roadmaps, and cross-functional team alignment.</span></div>
        </button>

        <!-- Program Management -->
        <button class="exp-card group" data-color="barn-red">
          <div class="exp-card-icon bg-barn-red/10 text-barn-red group-[.active]:bg-barn-red group-[.active]:text-cream">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
          </div>
          <h3 class="exp-card-title">Program Management</h3>
          <div class="exp-card-desc"><span>Orchestrating multiple projects, stakeholders, and timelines to deliver outcomes.</span></div>
        </button>

        <!-- BUSINESS & CONTENT -->
        <!-- Technical Sales -->
        <button class="exp-card group" data-color="sage">
          <div class="exp-card-icon bg-sage/10 text-sage group-[.active]:bg-sage group-[.active]:text-cream">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <h3 class="exp-card-title">Technical Sales</h3>
          <div class="exp-card-desc"><span>Bridging technical solutions with business needs to close complex deals.</span></div>
        </button>

        <!-- Technical Writing -->
        <button class="exp-card group" data-color="gold">
          <div class="exp-card-icon bg-gold/10 text-gold group-[.active]:bg-gold group-[.active]:text-timber">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
          </div>
          <h3 class="exp-card-title">Technical Writing</h3>
          <div class="exp-card-desc"><span>Crafting clear documentation, tutorials, and guides that developers love to read.</span></div>
        </button>

        <!-- Content Creation -->
        <button class="exp-card group" data-color="timber">
          <div class="exp-card-icon bg-timber/10 text-timber group-[.active]:bg-timber group-[.active]:text-cream">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="exp-card-title">Content Creation</h3>
          <div class="exp-card-desc"><span>Producing engaging videos, articles, and media that educate and inspire.</span></div>
        </button>
      </div>
    </div>
  </section>

  <script>
    document.querySelectorAll('.exp-card').forEach(card => {
      card.addEventListener('click', () => {
        const wasActive = card.classList.contains('active');
        document.querySelectorAll('.exp-card').forEach(c => c.classList.remove('active'));
        if (!wasActive) {
          card.classList.add('active');
        }
      });
    });
  </script>

  <!-- Life Outside Code -->
  <section class="life-outside-section text-cream py-16 md:py-20 overflow-hidden">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-display font-bold text-center mb-3" style="color: #f5f0e6 !important;">
        Life Outside the Terminal
      </h2>
      <p class="text-center max-w-2xl mx-auto mb-10 md:mb-14 text-sm md:text-base" style="color: #f5f0e6 !important;">
        When I'm not pushing commits, you'll find me in the great outdoors or spending time with my wife Cassie.
      </p>

      <div class="photo-collage">
        <div class="polaroid polaroid-1">
          <div class="polaroid-inner">
            <img src="/pictures/bobby-timmy-golfing.jpeg" alt="Golfing" />
            <span class="polaroid-caption">Golf</span>
          </div>
        </div>
        <div class="polaroid polaroid-2">
          <div class="polaroid-inner">
            <img src="/pictures/bobby-snowboard.jpeg" alt="Snowboarding" />
            <span class="polaroid-caption">Snowboarding</span>
          </div>
        </div>
        <div class="polaroid polaroid-3">
          <div class="polaroid-inner">
            <img src="/pictures/bobby-cassie-block-island.jpeg" alt="Block Island with Cassie" />
            <span class="polaroid-caption">Adventures</span>
          </div>
        </div>
        <div class="polaroid polaroid-4">
          <div class="polaroid-inner">
            <img src="/pictures/bobby-barn.jpeg" alt="At the barn" />
            <span class="polaroid-caption">The Barn</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <style>
    .life-outside-section {
      position: relative;
      background: linear-gradient(
        135deg,
        #3d2914 0%,
        #5c4023 25%,
        #3d2914 50%,
        #8b2500 75%,
        #3d2914 100%
      );
      background-size: 400% 400%;
      animation: gradientShift 15s ease infinite;
    }

    @keyframes gradientShift {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }

    .photo-collage {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
      max-width: 600px;
      margin: 0 auto;
      padding: 0 1rem;
    }

    @media (min-width: 768px) {
      .photo-collage {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0;
        max-width: none;
        padding: 2rem 0;
        min-height: 320px;
        position: relative;
      }
    }

    .polaroid {
      background: #f5f0e6;
      padding: 0.5rem 0.5rem 0.25rem;
      border-radius: 4px;
      box-shadow:
        0 4px 6px rgba(0, 0, 0, 0.3),
        0 10px 20px rgba(0, 0, 0, 0.2);
      transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1), box-shadow 0.3s ease;
    }

    .polaroid-inner {
      display: flex;
      flex-direction: column;
    }

    .polaroid img {
      width: 100%;
      aspect-ratio: 1;
      object-fit: cover;
      border-radius: 2px;
    }

    .polaroid-caption {
      display: block;
      text-align: center;
      font-family: var(--font-display);
      font-size: 0.85rem;
      color: #3d2914;
      padding: 0.5rem 0 0.25rem;
      font-weight: 600;
    }

    /* Mobile layout */
    @media (max-width: 767px) {
      .polaroid {
        transform: rotate(0deg);
      }

      .polaroid:hover {
        transform: scale(1.02);
        box-shadow:
          0 8px 12px rgba(0, 0, 0, 0.4),
          0 16px 32px rgba(0, 0, 0, 0.3);
      }
    }

    /* Desktop scattered layout */
    @media (min-width: 768px) {
      .polaroid {
        position: absolute;
        width: 180px;
        padding: 0.75rem 0.75rem 0.35rem;
      }

      .polaroid-caption {
        font-size: 0.95rem;
        padding: 0.6rem 0 0.3rem;
      }

      .polaroid-1 {
        left: 10%;
        transform: rotate(-8deg);
        animation: float1 6s ease-in-out infinite;
        z-index: 1;
      }

      .polaroid-2 {
        left: 30%;
        transform: rotate(5deg);
        animation: float2 7s ease-in-out infinite;
        z-index: 2;
      }

      .polaroid-3 {
        right: 30%;
        transform: rotate(-4deg);
        animation: float3 5.5s ease-in-out infinite;
        z-index: 3;
      }

      .polaroid-4 {
        right: 10%;
        transform: rotate(7deg);
        animation: float4 6.5s ease-in-out infinite;
        z-index: 2;
      }

      .polaroid:hover {
        transform: rotate(0deg) scale(1.15);
        box-shadow:
          0 12px 24px rgba(0, 0, 0, 0.4),
          0 24px 48px rgba(0, 0, 0, 0.3);
        z-index: 10;
        animation-play-state: paused;
      }

      @keyframes float1 {
        0%, 100% { transform: rotate(-8deg) translateY(0); }
        50% { transform: rotate(-6deg) translateY(-12px); }
      }

      @keyframes float2 {
        0%, 100% { transform: rotate(5deg) translateY(0); }
        50% { transform: rotate(7deg) translateY(-10px); }
      }

      @keyframes float3 {
        0%, 100% { transform: rotate(-4deg) translateY(0); }
        50% { transform: rotate(-2deg) translateY(-14px); }
      }

      @keyframes float4 {
        0%, 100% { transform: rotate(7deg) translateY(0); }
        50% { transform: rotate(5deg) translateY(-8px); }
      }
    }

    @media (min-width: 1024px) {
      .polaroid {
        width: 200px;
      }

      .polaroid-1 { left: 12%; }
      .polaroid-2 { left: 32%; }
      .polaroid-3 { right: 32%; }
      .polaroid-4 { right: 12%; }
    }
  </style>

  <!-- Latest Posts -->
  {posts.length > 0 && (
    <section class="py-20">
      <div class="max-w-6xl mx-auto px-4">
        <div class="flex justify-between items-center mb-12">
          <h2 class="text-3xl md:text-4xl font-display font-bold text-timber">
            Latest Posts
          </h2>
          <a href="/blog" class="text-barn-red hover:text-barn-red-light font-medium">
            View all &rarr;
          </a>
        </div>
        <div class="grid md:grid-cols-3 gap-8">
          {posts.map((post) => (
            <BlogCard post={post} />
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Testimonial -->
